<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/itemCv"
    card_view:cardElevation="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/symbolTv"
            android:layout_width="0dp"
            android:layout_height="@dimen/stock_list_item_height"
            android:layout_weight="1"
            android:gravity="center|start"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_gravity="center"
            android:text="www"
            android:textSize="@dimen/stock_list_item_title_text_size">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/stock_list_item_height"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/priceTv"
            android:textSize="@dimen/stock_list_item_title_text_size"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_gravity="center">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/stock_list_item_height"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/differenceTv"
            android:textSize="@dimen/stock_list_item_title_text_size"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_gravity="center">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/stock_list_item_height"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/volumeTv"
            android:textSize="@dimen/stock_list_item_title_text_size"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_gravity="center">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/stock_list_item_height"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/buyingTv"
            android:textSize="@dimen/stock_list_item_title_text_size"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_gravity="center">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/stock_list_item_height"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/salesTv"
            android:textSize="@dimen/stock_list_item_title_text_size"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_gravity="center">

        </TextView>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/stock_list_item_height"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                android:layout_centerInParent="true"
                android:id="@+id/changeImgv">

            </ImageView>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>